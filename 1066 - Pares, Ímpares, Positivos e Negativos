n1 = int(input())
n2 = int(input())
n3 = int(input())
n4 = int(input())
n5 = int(input())

lista = [n1, n2, n3, n4, n5]
listamedia = list()
par = impar = positivo = negativo = 0
for i in lista:
    if i % 2 == 0:
        par += 1
    if i % 2 == 1:
        impar += 1
    if i > 0:
        positivo += 1
    if i < 0:
        negativo += 1

print(f'{par} valor(es) par(es)')
print(f'{impar} valor(es) impar(es)')
print(f'{positivo} valor(es) positivo(s)')
print(f'{negativo} valor(es) negativo(s)')
